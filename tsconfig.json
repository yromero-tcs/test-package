{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,    
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "declaration": true,
    "types": [
      "node", "jest"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}